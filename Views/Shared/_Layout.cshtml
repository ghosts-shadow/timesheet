                    }

                }
            </ul>
            <ul class="nav navbar-nav navbar-right">
                @Html.Partial("_LoginPartial")
            </ul>
        </div>
    </div>
</nav>
<div class=" body-content" style="margin-left: 5%; margin-right: 5%">


    @RenderBody()

    <hr/>
    <footer>

        <p>&copy; @DateTime.Now.Year - Citiscape L.L.C</p>
    </footer>
</div>
@Scripts.Render("~/bundles/jquery")
