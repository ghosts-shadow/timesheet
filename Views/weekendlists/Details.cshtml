@model onlygodknows.Models.weekendlist

@{
    ViewBag.Title = "Details";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>weekend list</h2>
<h4>Details</h4>

<div>
    <hr />
    <dl class="dl-horizontal">
        <dt>
            @Html.DisplayNameFor(model => model.weekend)
        </dt>

        <dd>
            @{
                var weekdayname = "";
                switch (Model.weekend)
                {
                    case "5":
                        weekdayname = "Friday";
                        break;
                    case "6":
                        weekdayname = "Saturday";
                        break;
                    case "0":
                        weekdayname = "Sunday";
                        break;
                }
            }
            @weekdayname
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.ProjectList.PROJECT_NAME)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.ProjectList.PROJECT_NAME)
        </dd>

    </dl>
</div>
<p>
    @Html.ActionLink("Edit", "Edit", new { id = Model.Id }) |
    @Html.ActionLink("Back to List", "Index")
</p>
