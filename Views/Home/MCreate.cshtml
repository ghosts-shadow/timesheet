@model onlygodknows.Models.MainTimeSheet
@{
    ViewBag.Title = "MCreate";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@if (Request.IsAuthenticated)
{
using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">
        <hr />

        <div class="form-group">
            <div class="row">
                <div class="col-md-2">
                    @*
                        @Html.EditorFor(model => model.TMonth, new { htmlAttributes = new { @class = "form-control" } })
                    *@
                    <input type="date" id="TMonth" name="TMonth" />
                    @Html.ValidationMessageFor(model => model.TMonth, "", new { @class = "text-danger" })
                </div>
                @Html.LabelFor(model => model.ManPowerSupplier, htmlAttributes: new { @class = "control-label col-md-2" })
