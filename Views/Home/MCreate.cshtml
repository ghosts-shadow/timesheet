                <div class="col-md-2">
                    @Html.DropDownList("Project", null, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.Project, "", new { @class = "text-danger" })
                </div>
            </div>
            <div class="row">
                @Html.LabelFor(model => model.Ref, htmlAttributes: new { @class = "control-label col-md-2" })
                <div class="col-md-2">
                    @Html.EditorFor(model => model.Ref, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.Ref, "", new { @class = "text-danger" })
                </div>
                @Html.LabelFor(model => model.RefNo, htmlAttributes: new { @class = "control-label col-md-2" })
